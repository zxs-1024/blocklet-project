{
  "name": "blocklet-project",
  "private": true,
  "version": "0.1.0",
  "scripts": {
    "dev": "blocklet dev",
    "lint": "tsc --noEmit && eslint src api/src --ext .mjs,.js,.jsx,.ts,.tsx",
    "lint:fix": "npm run lint -- --fix",
    "start": "cross-env NODE_ENV=development nodemon api/dev.ts -w api",
    "clean": "node scripts/build-clean.mjs",
    "bundle": "tsc --noEmit && npm run bundle:client && npm run bundle:api",
    "bundle:client": "vite build",
    "bundle:api": "npm run clean && tsc -p tsconfig.api.json && blocklet bundle --compact --create-release",
    "deploy": "npm run bundle && blocklet deploy .blocklet/bundle",
    "upload": "npm run bundle && blocklet upload .blocklet/release/blocklet.json",
    "prepare": "npx simple-git-hooks",
    "bump-version": "zx --quiet scripts/bump-version.mjs",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "lint-staged": {
    "*.{mjs,js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint"
    ],
    "*.{css,less,scss,json,graphql}": [
      "prettier --write"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@arcblock/did-auth": "^1.18.139",
    "@arcblock/did-auth-storage-nedb": "^1.7.1",
    "@blocklet/sdk": "^1.16.32",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@mui/icons-material": "^6.2.0",
    "@mui/material": "^6.2.0",
    "@ocap/client": "^1.18.139",
    "@ocap/mcrypto": "^1.18.139",
    "@ocap/wallet": "^1.18.139",
    "@types/better-sqlite3": "^7.6.12",
    "axios": "^1.7.9",
    "better-sqlite3": "^11.7.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv-flow": "^4.1.0",
    "express": "^4.21.0",
    "express-async-errors": "^3.1.1",
    "react-hot-toast": "^2.4.1",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@arcblock/eslint-config": "^0.3.3",
    "@arcblock/eslint-config-ts": "^0.3.3",
    "@blocklet/js-sdk": "^1.16.32",
    "@jest/globals": "^29.7.0",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/dotenv-flow": "^3.3.3",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.16.10",
    "@types/react": "^18.3.10",
    "@types/react-dom": "^18.3.0",
    "@types/supertest": "^2.0.12",
    "@vitejs/plugin-react": "^4.3.2",
    "bumpp": "^9.6.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.1",
    "import-sort-style-module": "^6.0.0",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.10",
    "nodemon": "^3.1.7",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.3",
    "prettier-plugin-import-sort": "^0.0.7",
    "react": "~18.2.0",
    "react-dom": "~18.2.0",
    "react-router-dom": "^6.26.2",
    "rimraf": "^5.0.10",
    "simple-git-hooks": "^2.11.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.2",
    "vite": "^5.4.8",
    "vite-plugin-blocklet": "^0.9.14",
    "vite-plugin-svgr": "^4.2.0",
    "zx": "^8.1.8"
  },
  "importSort": {
    ".js, .jsx, .mjs": {
      "parser": "babylon",
      "style": "module"
    },
    ".ts, .tsx": {
      "style": "module",
      "parser": "typescript"
    }
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  }
}
